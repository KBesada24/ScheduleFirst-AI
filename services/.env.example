# Environment Configuration
ENVIRONMENT=development
DEBUG=true

# Ollama Configuration
OLLAMA_HOST=https://ollama.com
OLLAMA_MODEL=gemini-3-flash-preview
OLLAMA_API_KEY=your_ollama_api_key_here

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here
SUPABASE_ANON_KEY=your_anon_key_here

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/cuny_schedule_optimizer
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# Redis/Cache Configuration (optional)
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600

# Web Scraping Configuration
SCRAPER_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36
SCRAPER_REQUEST_DELAY=2.0
SCRAPER_MAX_RETRIES=3

# CUNY Global Search Configuration
CUNY_GLOBAL_SEARCH_URL=https://globalsearch.cuny.edu/

# RateMyProfessors Configuration
RATEMYPROF_BASE_URL=https://www.ratemyprofessors.com
RATEMYPROF_GRAPHQL_URL=https://www.ratemyprofessors.com/graphql

# Sentiment Analysis Configuration
SENTIMENT_MODEL_NAME=distilbert-base-uncased-finetuned-sst-2-english

# Schedule Optimization Configuration
MAX_SCHEDULES_TO_GENERATE=5
OPTIMIZATION_TIMEOUT=30

# Background Jobs Configuration
SYNC_SCHEDULE_CRON=0 2 * * 0

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FULL_TOOL_RESULTS=false
LOG_TOOL_RESULT_PREVIEW_CHARS=200

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# Monitoring & Error Tracking
SENTRY_DSN=
